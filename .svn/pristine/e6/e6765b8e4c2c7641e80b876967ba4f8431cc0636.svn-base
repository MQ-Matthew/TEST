<block name="js">

    <script type="text/javascript">

        /**
         * 验证身份证的信息正确与否
         */
        function shenfengzhihao(){

            // 验证身份证
            if($('#sfzh').val() != false) {
                var str = $('#sfzh').val();
                if(str){
                    code(str);
                }
            }
        }
		
		/**
         * 验证工作时间是否有输入
         */
		 function timeinput(){

            
            if($('#gzsj').val() != false) {
                var str = $('#gzsj').val();
                if(str){
                    //timeyear(str);
					var years = str;
					//alert(years);
					var age = '';
					if(years){
							age = ages(years);
							$("#gongli").val(age+'年');
						}else{
							$("#gongli").val('');
						}
                }
            }
        }
		
		function timeinput1(){

           
            if($('#gwsj').val() != false) {
                var str = $('#gwsj').val();
                if(str){
                    var years = str;
					//alert(years);
					var age = '';
					if(years){
							age = ages(years);
							$("#bgwnx").val(age+"年");
						}else{
							$("#bgwnx").val('');
						}
                }
            }
        }
		level();
