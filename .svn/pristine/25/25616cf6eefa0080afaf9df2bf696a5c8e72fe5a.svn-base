    <script type="text/javascript">

        // alert(111111);

        document.onreadystatechange = function(){
            if(document.readyState == "complete"){
                //当页面加载状态为完全结束时进入

                var str = '';
                str = document.getElementById("jiaoyu").value;
                /// alert(str);
                if(str !== null){
                    ///  alert(2222222);
                    viewTableData();

                }

            }
        }

        //显示表格数据

        function viewTableData(){

            var str ={$str};

            if(typeof str === 'object'){
                json = str;
            }else{
                json = eval(str);
            }

            /// alert(json);

            var html ='';
            for(var i=0; i<json.data.length; i++){
                //alert(json.data[i].class);
                html += '<tr>';
                html += '<td><input type="text" name="jy_rxsj[]" id="jy_rxsj"  class="form-control input-date" value="' + json.data[i].jy_rxsj + '"  style="width:100%"> </td>';
                html += '<td><input type="text" name="jy_bysj[]" id="jy_bysj"  class="form-control input-date" value="' + json.data[i].jy_bysj + '" style="width:100%"> </td>';
                html += '<td><input type="text" name="jy_xxmc[]" id="jy_xxmc"   value="' + json.data[i].jy_xxmc + '" style="width:100%"> </td>';
                html += '<td><input type="text" name="jy_zy[]" id="jy_zy"  value="' + json.data[i].jy_zy + '" style="width:100%"> </td>';
                html += '<td><input type="text" name="jy_xz[]" id="jy_xz"  value="' + json.data[i].jy_xz + '" style="width:100%"> </td>';
                html += '<td>';
                html += ' <select class="form-control person_xl" id="jy_xl"  >';
                html += "<option value='" + json.data[i].jy_xl + "'>" + json.data[i].jy_xl + "</option>";
                html += '</select>';
                html += '</td>';
				html += '<td><input type="text" name="jy_xw[]" id="jy_xw"  value="' + json.data[i].jy_xw + '" style="width:100%"> </td>';
                html += '</tr>';
            }

            ///alert(55555);

            $('#goods').before(html);

            var count = 0;
            $('.person').each(function(){
                var parent_tr = $(this).parent().parent();//指向外面的tr对象
                var temp_select_obj = parent_tr.find('td').eq(2).find('select');

                temp_select_obj.empty();
                var name = json.data[count].wu_type;
                for(var i = 0; i < arr_person.length; i++)
                {
                    if(arr_person[i].name == name)
                    {
                        for(var j = 0; j < arr_person[i].data.length; j++)
                        {
                            temp_select_obj.append("<option value='" + arr_person[i].data[j].name + "'>" + arr_person[i].data[j].name + "</option>");
                        }
                        break;
                    }
                }

                $(this).val(json.data[count].wu_type);
                temp_select_obj.val(json.data[count].wu_class);
                count++;
            });


            $(document).ready(function() {

                $('.input-date').datetimepicker({
                    format : 'yyyy-mm-dd',
                    minView: "month",
                    locale : 'zh-cn',
                    //locale: moment.locale('zh-cn'),
                    ignoreReadonly : true,
                    autoclose: 1,
                    widgetPositioning : {
                        horizontal : 'auto',
                        vertical : 'bottom'
                    },
                });

                $(".input-daterange input").datetimepicker({
                    format : "yyyy-mm-dd",
                    locale : 'zh-cn',
                    minView: "month",
                    showTodayButton : true,
                    showClose : true,
                    ignoreReadonly : true,
                    widgetPositioning : {
                        horizontal : 'auto',
                        vertical : 'bottom'
                    },
                });

                $("#start_date").on("dp.change", function(e) {
                    if ($("#end_date").length > 0) {
                        $('#end_date').data("DateTimePicker").minDate(e.date);
                    }
                });

                $("#end_date").on("dp.change", function(e) {
                    if ($("#start_date").length > 0) {
                        $('#start_date').data("DateTimePicker").maxDate(e.date);
                    }
                });

                $(".input-date-time").datetimepicker({
                    format : 'yyyy-mm-dd',
                    locale : 'zh',
                    minView: "month",
                    sideBySide : true,
                    autoclose: 1,
                    showTodayButton : true,
                    showClose : true,
                    ignoreReadonly : true,
                    widgetPositioning : {
                        horizontal : 'auto',
                        vertical : 'bottom'
                    },
                });

            });


        }


